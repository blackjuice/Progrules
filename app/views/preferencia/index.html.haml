= stylesheet_link_tag 'application', media: 'all', |
  'data-turbolinks-track' => true                  |
= javascript_include_tag 'application', 'data-turbolinks-track' => true
= csrf_meta_tags
= render 'layouts/shim'

%header.navbar.navbar-fixed-top.navbar-inverse
  #container
    = render 'layouts/header'

%stripes
  #container
    = render 'layouts/stripes'

%h1 Lista de preferências

%div{:style => "text-align:center"}
  %a.btn.btn-primary{:href=> "preferencia/new"}= (@edit ? "Editar" : "Inserir") + " Preferências"

%br

.well.well-sm  
  %table.table.table-hover.table-condensed
    %thead
      %tr
        %th Nome
        %th Ordem
    %tbody
      - @list.each do |pref|
        %tr
          %td= pref.preferido.name
          %td= pref.ordem

#content
  = yield
  = render 'layouts/footer'

%img{:alt => "logo", :src => "/cervantes.png", :style => "float:right; width:30%; height:auto;"}