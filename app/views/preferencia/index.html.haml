= stylesheet_link_tag 'application', media: 'all', |
  'data-turbolinks-track' => true                  |
= javascript_include_tag 'application', 'data-turbolinks-track' => true
= csrf_meta_tags
= render 'layouts/shim'

%header.navbar.navbar-fixed-top.navbar-inverse
  #container
    = render 'layouts/header'

%h1 Lista de preferências

%table
  %thead
    %tr
      %th Nome
      %th Ordem
  %tbody
    - @list.each do |pref|
      %tr
        %td= pref.preferido.name
        %td= pref.ordem

%a{:href=> "preferencia/new"}= (@edit ? "Editar" : "Inserir") + " Preferências"

#content
  = yield
  = render 'layouts/footer'