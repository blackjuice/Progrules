= stylesheet_link_tag 'application', media: 'all', |
  'data-turbolinks-track' => true                  |
= javascript_include_tag "controller"
= javascript_include_tag 'application', 'data-turbolinks-track' => true
= csrf_meta_tags
= render 'layouts/shim'

%header.navbar.navbar-fixed-top.navbar-inverse
  #container
    = render 'layouts/header'

.well
  %h1 Inserir aluno por Excel/CSV

  = form_tag '', multipart: true do
    .form-group
      %label Arquivo (Salvar em CSV)
      = file_field_tag 'file', :accept => "text/csv"

    .radio-horizontal
      %label Sem preferencias
      = radio_button_tag 'prefs', 'false', true, onchange: "changeModel(false)"

    .radio-horizontal
      %label Com preferencias
      = radio_button_tag 'prefs', 'true', false, onchange: "changeModel(true)"

    = submit_tag 'Inserir', class: "btn btn-success"

  .modelo#semprefs
    %p Modelo sem preferencias:
    %div{:class=>'excel'}
      %div{:class=>'line'}
        %div{:class=>'row'} Classe
        %div{:class=>'row'} Nome do Aluno
        %div{:class=>'row'} Sexo

  .hidden#comprefs
    %p Modelo com preferencias:
    %div{:class=>'excel'}
      %div{:class=>'line'}
        %div{:class=>'row'} Classe
        %div{:class=>'row'} Nome do Aluno
        %div{:class=>'row'} Sexo
        %div{:class=>'row'} Primeira preferencia
        %div{:class=>'row'} ...
        %div{:class=>'row'} Enesima preferencia

#content
  = yield
  = render 'layouts/footer'