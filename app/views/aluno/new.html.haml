%h1 Inserir novo aluno

= button_to 'Logout', login_path(), :method => :delete
= button_to "Go Back", '..', :onclick => 'history.back(); return false;'

= form_tag do
  = label :aluno, :name, 'Nome'
  = text_field :aluno, 'nome'

  = label :aluno, :classe, 'Classe'
  = select :aluno, :classe, @classes

  = label :aluno, :sexo, 'Sexo'
  = select :aluno, :sexo, @sexos

  = submit_tag 'Inserir'
